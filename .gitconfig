[core]
	editor = vim
[merge]
	tool = vimdiff
[alias]
	last = log -1 HEAD
[alias]
        gr = log --graph --full-history --all --color --pretty=tformat:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"
	st = status
[alias] cpush = !f(){git commit -a -m "$1" && git push;};f
	co = checkout
	br = branch
	ci = commit
[push]
	default = simple
