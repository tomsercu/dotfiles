[user]
	name = Tom Sercu
	email = tom.sercu@gmail.com
[core]
	editor = vim
[merge]
	tool = vimdiff
[alias]
	last = log -1 HEAD
[alias]
    gr = log --graph --full-history --all --color --pretty=tformat:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"
    st = status
    co = checkout
    br = branch
    ci = commit
	d = difftool
	df = diff
    ;cpush = !f(){git commit -a -m "$1" && git push;};f
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
